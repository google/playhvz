<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
  </style>

  <style name="HeaderText">
    <item name="android:textSize">40sp</item>
  </style>

  <style name="TextInputLabel">
    <item name="android:textSize">18sp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingBottom">2dp</item>
  </style>

  <style name="TextInputSubLabel">
    <item name="android:textColor">@color/sublabel_text</item>
    <item name="android:textSize">14sp</item>
    <item name="android:paddingTop">1dp</item>
    <item name="android:paddingBottom">2dp</item>
  </style>

  <style name="MissionTime" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="ChatInfoOption" parent="TextAppearance.MaterialComponents.Subtitle1">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:drawablePadding">12dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingBottom">20dp</item>
    <item name="android:visibility">gone</item>
    <item name="android:paddingTop">20dp</item>
    <item name="android:paddingStart">@dimen/screen_margin_horizontal</item>
    <item name="android:paddingEnd">@dimen/screen_margin_horizontal</item>
    <item name="android:textColor">@color/app_secondary_text</item>
    <item name="drawableTint">@color/app_secondary_text</item>
  </style>

</resources>